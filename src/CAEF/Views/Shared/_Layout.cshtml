<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/estilos.css">
    <title>@ViewBag.Title</title>
</head>
<body ng-app="caef">
    <header>
        <div class="page-header">
            <div class="row">
                <div class="col-xs-3">
                    <img src="~/img/logouabc.png" alt="logoUabc" width="80" height="115">
                </div>
                <h1 class="col-xs-6">Control de Actas de Evaluaci&oacute;n Final<br><small>Facultad de Ingenier&iacute;a, Arquitectura y Diseño.</small></h1>
                <div class="col-xs-3">
                    <img src="~/img/logofiad.png" alt="logofiad" width="80" height="115">
                </div>
            </div>
        </div>
    </header>
    <div class="row" id="menu">
        <div class="container">
            <h3 id="h3Menu">Menu</h3>
            <ul ng-controller="MenuController" class="nav nav-pills nav-stacked col-md-2">
                <li><label><span class="glyphicon glyphicon-user"></span> {{usuarioAutenticado.nombre}}</label></li>
                <li><label>Online: <span id="online">0</span></label></li>
                <li ng-class="{ active: isActive('/')}" ><a href="/"><span class="glyphicon glyphicon-home"></span>  Inicio</a></li>
                <li ng-show="usuarioAutenticado.rolId == 1" ng-class="{ active: isActive('/AgregarUsuario') || isActive('/Usuarios')}" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-user"></span> Usuarios<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="~/AgregarUsuario">Agregar usuario</a>
                        </li>
                        <li role="presentation" class="divider"></li>
                        <li>
                            <a href="~/Usuarios">Mostrar usuarios</a>
                        </li>
                    </ul>
                </li>
                <li ng-class="{ active: isActive('/Acta') || isActive('/MostrarActas')}" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-folder-open"></span> Actas<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="~/Acta">Solicitar acta</a>
                        </li>

                        <li role="presentation" class="divider"></li>
                        <li>
                            <a href="#">Mostrar actas</a>
                        </li>
                    </ul>
                </li>

                <li><a href="#" data-toggle="pill"><span class="glyphicon glyphicon-bell"></span>  Notificaciones<span class="badge">1</span></a></li>
                <li><a href="#" data-toggle="pill"><span class="glyphicon glyphicon-info-sign"></span> Ayuda</a></li>
                <li><a href="~/Logout"><span class="glyphicon glyphicon-off"></span> Cerrar sesi&oacute;n</a></li>

            </ul>
            @RenderBody()
        </div><!-- end of container -->
    </div>
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <p>Universidad Aut&oacute;noma de Baja California 2017.</p>
                    <p>Diseñado por ©Leyvus.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/signalr/jquery.signalR.min.js"></script>
    <script src="~/SignalR/Hubs"></script>
    <script src="~/js/NotificacionesHub.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angularjs/angular.min.js"></script>
    <script src="~/lib/jpkleemans-angular-validate/dist/angular-validate.min.js"></script>
    <script src="~/lib/angular-modal-service/dst/angular-modal-service.min.js"></script>
    <script src="~/js/App.js"></script>
    <script src="~/js/LoginController.js"></script>
    <script src="~/js/MenuController.js"></script>
    <script src="~/js/MensajeController.js"></script>
    <script src="~/js/UsuariosController.js"></script>
    <script src="~/js/ActasController.js"></script>
</body>
</html>